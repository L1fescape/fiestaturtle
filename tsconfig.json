{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src": ["src"],
      "src/*": ["src/*"],
      "server/*": ["server/*"],
      "web/*": ["web/*"]
    },
    "outDir": "build/web",
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["web/index.tsx", "src/**/*", "server/index.ts"],
  "exclude": ["test.ts", "**/*.spec.ts"]
}
